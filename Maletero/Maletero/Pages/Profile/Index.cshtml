@page
@model Maletero.Pages.Profile.IndexModel

@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<div class="container">
    <form>
        <div class="form-group">
            <label asp-for=ApplicationUser.Email>Email: <span>@Model.ApplicationUser.Email</span></label>
        </div>
        <div class="form-group">
            <label asp-for="ApplicationUser.FirstName">Name: <span>@Model.ApplicationUser.FirstName</span></label>

            <label asp-for="ApplicationUser.LastName"><span>@Model.ApplicationUser.LastName</span></label>
        </div>
        <div class="form-group">
            <label asp-for="ApplicationUser.Birthday">Birthdate: <span>@Model.ApplicationUser.Birthday</span></label>
        </div>
        <div class="form-group">
            <label asp-for="ApplicationUser.State">State: <span>@Model.ApplicationUser.State</span></label>
        </div>
    </form>
</div>

<hr />